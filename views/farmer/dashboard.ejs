<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .product-image {
            max-width: 100px;
            height: auto;
        }
        .navbar-heading {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
        }
        .navbar-buttons .btn {
            margin-left: 10px;
        }
        .btn-add-product {
            background-color: #04fb09;
            border-color: #04fb09;
        }
        .btn-add-product:hover {
            background-color: #04ec6d;
            border-color: #0ae609;
        }
        @media (max-width: 767px) {
            .navbar-buttons {
                margin-top: 10px;
            }
            .navbar-buttons .btn {
                margin-left: 0;
                margin-top: 5px;
                display: block;
            }
        }
        .bg-custom {
        background-color: #3ee7e7;
    }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #008080;">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand mx-auto" href="#"> <i class="fas fa-shopping-basket"></i> Farmeto </a>
            <h1 class="navbar-heading d-lg-none">Farmer Dashboard</h1>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <h1 class="navbar-heading d-none d-lg-block mx-auto">Farmer Dashboard</h1>
                <div class="navbar-buttons">
                    <a class="btn btn-success btn-add-product" href="/farmer/<%= dashboard.dataValues.id%>/dashboard/add">Add Product</a>
                    <a class="btn btn-primary" href="/farmer/<%= dashboard.dataValues.id%>/dashboard/profile">Profile</a>
                    <a class="btn btn-outline-light" href="/farmer/<%= dashboard.dataValues.id %>/dashboard/logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <% if (products.length==0) { %>
            <h2 class="mt-5 text-center">No Products Found</h2>
        <% } else { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Si No</th>
                        <th>Product</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="productList">
                    <% if (products.length === 0) { %>
                        <tr>
                            <td colspan="8">No Products Found</td>
                        </tr>
                    <% } else { %>
                        <% for (let i = 0; i < products.length; i++) { %>
                            <tr class="fade-in">
                                <td><%= i + 1 %></td>
                                <td><img src="<%= products[i].dataValues.image %>" alt="Product Image" class="img-fluid product-image"></td>
                                <td class="product-name"><%= products[i].dataValues.name %></td>
                                <td class="product-name"><%= products[i].dataValues.category %></td>
                                <td class="product-name"><%= products[i].dataValues.description %></td>
                                <td class="product-name"><%= products[i].dataValues.price %></td>
                                <td class="product-name"><%= products[i].dataValues.quantity %></td>
                                <td>
                                    <a class="btn btn-primary" href="/farmer/<%= dashboard.dataValues.id %>/dashboard/add/<%=products[i].dataValues.id %>"><i class="fas fa-edit"></i> Edit</a>
                                    <a class="btn btn-danger" href="/farmer/<%= dashboard.dataValues.id %>/dashboard/add/<%=products[i].dataValues.id  %>"><i class="fas fa-trash-alt"></i> Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
    <footer class="footer py-3 bg-custom text-white fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">Copyright &copy; 2024 Farmeto. All rights reserved.</span>
        </div>
    </footer>
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
